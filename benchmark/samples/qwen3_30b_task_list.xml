    <text control_id="4" name="txt_status_label"
          x="320" y="20" width="60" height="24"
          text="상태:" font="맑은 고딕,9,0,0,0,0"/>

    <combobox control_id="5" name="cbo_search_status"
              x="390" y="20" width="120" height="24"
              link_data="ds_search:STATUS"
              font="맑은 고딕,9,0,0,0,0">
      <option value="" text="전체"/>
      <option value="0" text="대기"/>
      <option value="1" text="진행"/>
      <option value="2" text="완료"/>
    </combobox>

    <pushbutton control_id="6" name="btn_search"
                x="530" y="18" width="80" height="28"
                text="조회" font="맑은 고딕,9,0,0,0,0"
                onclick="eventfunc:fn_search(objInst)"/>
  </panel>

  <!-- Grid Panel -->
  <panel control_id="10" name="pnl_grid"
         x="10" y="80" width="980" height="500">

    <grid control_id="11" name="grid_list"
          x="0" y="0" width="980" height="500"
          link_data="ds_list"
          linenumber_show="1"
          use_checkrow="1"
          on_itemdblclick="eventfunc:fn_edit(objInst, nRow, nColumn, buttonClick, imageIndex)">

      <column>
        <header title="업무ID"/>
        <data name="TASK_ID"
              link_data="ds_list:TASK_ID"
              width="100"
              text_horzalign="1"
              data_type="2"/>
      </column>

      <column>
        <header title="업무명"/>
        <data name="TASK_NAME"
              link_data="ds_list:TASK_NAME"
              width="200"
              text_horzalign="1"
              data_type="2"/>
      </column>

      <column>
        <header title="상태"/>
        <data name="STATUS"
              link_data="ds_list:STATUS"
              width="100"
              text_horzalign="1"
              data_type="2">
          <formatter>
            <format value="0" text="대기"/>
            <format value="1" text="진행"/>
            <format value="2" text="완료"/>
          </formatter>
        </data>
      </column>

      <column>
        <header title="담당자"/>
        <data name="ASSIGNEE"
              link_data="ds_list:ASSIGNEE"
              width="120"
              text_horzalign="1"
              data_type="2"/>
      </column>

      <column>
        <header title="시작일"/>
        <data name="START_DATE"
              link_data="ds_list:START_DATE"
              width="120"
              text_horzalign="1"
              data_type="3"/>
      </column>

      <column>
        <header title="종료일"/>
        <data name="END_DATE"
              link_data="ds_list:END_DATE"
              width="120"
              text_horzalign="1"
              data_type="3"/>
      </column>

      <column>
        <header title="진척도"/>
        <data name="PROGRESS"
              link_data="ds_list:PROGRESS"
              width="80"
              text_horzalign="1"
              data_type="0"
              pattern="#0%">
        </data>
      </column>

    </grid>
  </panel>

  <!-- Button Panel -->
  <panel control_id="20" name="pnl_buttons"
         x="10" y="590" width="980" height="40">

    <pushbutton control_id="21" name="btn_add"
